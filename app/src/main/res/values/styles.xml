<resources>
    <declare-styleable name="AppTheme">
        <attr name="introStyleRef" format="reference" />
        <attr name="questionStyleRef" format="reference" />
        <attr name="textAnswerStyleRef" format="reference" />
        <attr name="questionAndAnswerLayoutRef" format="reference" />
    </declare-styleable>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="introStyleRef">@style/intro</item>
        <item name="questionAndAnswerLayoutRef">@style/questionAndAnswerLayout</item>
        <item name="questionStyleRef">@style/question</item>
        <item name="textAnswerStyleRef">@style/textAnswer</item>
    </style>

    <style name="header" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:text">######################"</item>
    </style>

    <style name="intro" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/holo_purple</item>
        <item name="android:text">AAAA\n BBBB\n CCCC"</item>
    </style>

    <style name="question" parent="Base.TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textAnswer" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">answer</item>

    </style>

    <style name="radioButtonsAnswer" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="checkBoxAnswer" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="questionAndAnswerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
