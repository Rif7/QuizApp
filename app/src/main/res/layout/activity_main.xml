<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.MainActivity">

    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/questionsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView style="@style/intro" />

                <LinearLayout style="@style/questionAndAnswerLayout">

                    <TextView
                        style="@style/question"
                        android:text="Question 1" />

                    <EditText style="@style/textAnswer" />

                </LinearLayout>

                <LinearLayout style="@style/questionAndAnswerLayout">

                    <TextView
                        style="@style/question"
                        android:text="Question 2" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:text="question2_answer1"
                            style="@style/radioButtonsAnswer" />

                        <RadioButton
                            android:text="question2_answer2"
                            style="@style/radioButtonsAnswer" />

                        <RadioButton
                            android:text="question2_answer3"
                            style="@style/radioButtonsAnswer" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/questionAndAnswerLayout">

                    <TextView
                        style="@style/question"
                        android:text="Question 3" />

                    <CheckBox
                        android:text="question3_answer1"
                        style="@style/checkBoxAnswer" />

                    <CheckBox
                        android:text="question3_answer2"
                        style="@style/checkBoxAnswer" />

                    <CheckBox
                        android:text="question3_answer3"
                        style="@style/checkBoxAnswer" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:onClick="clickGradingButton"
                style="@style/gradingButton" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
